<%= form_for(apartment) do |f| %>
    <% if apartment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

          <ul>
            <% apartment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :street_address %>
      <%= f.text_field :street_address %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :start_date %>
      <%= f.date_select :start_date %>
    </div>

    <div class="field">
      <%= f.label :end_date %>
      <%= f.date_select :end_date %>
    </div>

    <div class="field">
      <%= f.label :rent_price %>
      <%= f.text_field :rent_price %>
    </div>

    <div class="field" style="border: solid black">
      <h1>Landlord</h1>
      <%= f.fields_for :landlord do |ll| %>
          <div class="field">
            <%= ll.label :first_name %>
            <%= ll.text_field :first_name %>
          </div>

          <div class="field">
            <%= ll.label :last_name %>
            <%= ll.text_field :last_name %>
          </div>

          <div class="field">
            <%= ll.label :email %>
            <%= ll.text_field :email %>
          </div>

          <div class="field">
            <%= ll.label :phone_number %>
            <%= ll.text_field :phone_number %>
          </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
<% end %>
