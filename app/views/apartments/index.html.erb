<%= search_form_for @q do |f| %>
    <div class="col-xs-12 col-sm-1"><%= f.search_field :name_cont, placeholder: 'Name' %></div>
    <div class="col-xs-12 col-sm-1"><%= f.search_field :street_address_cont, placeholder: 'Name' %></div>
    <div class="col-xs-12 col-sm-1"> <%= f.search_field :city_cont, placeholder: 'City' %></div>
    <div class="col-xs-12 col-sm-1"><%= f.search_field :state_cont, placeholder: 'State' %></div>
    <div class="col-xs-12"><%= f.submit %></div>
<% end %>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Landlord</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Rent price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.name %></td>
        <td><%= apartment.landlord %></td>
        <td><%= apartment.street_address %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.start_date %></td>
        <td><%= apartment.end_date %></td>
        <td><%= apartment.rent_price %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>
