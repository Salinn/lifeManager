<p id="notice"><%= notice %></p>

<h1>Bought Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Apartment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bought_items.each do |bought_item| %>
      <tr>
        <td><%= bought_item.name %></td>
        <td><%= bought_item.price %></td>
        <td><%= bought_item.apartment %></td>
        <td><%= bought_item.user %></td>
        <td><%= link_to 'Show', bought_item %></td>
        <td><%= link_to 'Edit', edit_bought_item_path(bought_item) %></td>
        <td><%= link_to 'Destroy', bought_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bought Item', new_bought_item_path %>
