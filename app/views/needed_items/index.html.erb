<p id="notice"><%= notice %></p>

<h1>Needed Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>User</th>
      <th>Apartment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @needed_items.each do |needed_item| %>
      <tr>
        <td><%= needed_item.name %></td>
        <td><%= needed_item.price %></td>
        <td><%= needed_item.user %></td>
        <td><%= needed_item.apartment %></td>
        <td><%= link_to 'Show', needed_item %></td>
        <td><%= link_to 'Edit', edit_needed_item_path(needed_item) %></td>
        <td><%= link_to 'Destroy', needed_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Needed Item', new_needed_item_path %>
