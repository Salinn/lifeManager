<p id="notice"><%= notice %></p>

<h1>Shared Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shared_items.each do |shared_item| %>
      <tr>
        <td><%= shared_item.name %></td>
        <td><%= shared_item.photo %></td>
        <td><%= shared_item.user %></td>
        <td><%= link_to 'Show', shared_item %></td>
        <td><%= link_to 'Edit', edit_shared_item_path(shared_item) %></td>
        <td><%= link_to 'Destroy', shared_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shared Item', new_shared_item_path %>
